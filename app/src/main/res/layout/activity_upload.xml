<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadActivity">

    <ImageView
        android:id="@+id/imageViewUpload"
        android:layout_width="281dp"
        android:layout_height="288dp"
        android:layout_marginTop="64dp"
        android:onClick="imageViewClicked"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_add_image" />

    <EditText
        android:id="@+id/editTextComment"
        android:layout_width="284dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="comment line"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/imageViewUpload"
        app:layout_constraintStart_toStartOf="@+id/imageViewUpload"
        app:layout_constraintTop_toBottomOf="@+id/imageViewUpload" />

    <Button
        android:id="@+id/buttonUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:onClick="uploadClicked"
        android:text="UPLOAD"
        app:layout_constraintEnd_toEndOf="@+id/editTextComment"
        app:layout_constraintStart_toStartOf="@+id/editTextComment"
        app:layout_constraintTop_toBottomOf="@+id/editTextComment" />
</androidx.constraintlayout.widget.ConstraintLayout>